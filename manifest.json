{
    "manifest_version": 3,
    "name": "Summarize GPT",
    "version": "1.0.0",
    "description": "A Chrome extension that summarizes web pages using OpenAI's GPT-3.",
    "permissions": ["activeTab", "scripting", "storage"],
    "action": {
      "default_icon": "icon16.png",
      "default_popup": "summarize.html"
    },
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
  